{
  "version": 2,
  "installCommand": "cd .. && npm ci",
  "buildCommand": "cd .. && npm run build:api-standalone",
  "functions": {
    "api/vercel-handler.js": {
      "runtime": "@vercel/node@3.1.0",
      "includeFiles": "{dist/**,workspace_modules/**}"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/vercel-handler.js"
    }
  ]
}
