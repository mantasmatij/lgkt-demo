{
  "version": 2,
  "installCommand": "cd .. && npm ci",
  "buildCommand": "cd .. && npm run build:api-standalone",
  "functions": {
    "api/vercel-handler.js": {
      "runtime": "@vercel/node@3.1.0",
      "includeFiles": "dist/**"
    }
  },
  "rewrites": [
    { "source": "/api", "destination": "/api/vercel-handler" },
    { "source": "/api/:path*", "destination": "/api/vercel-handler" }
  ]
}
